<div class= "row">
  <div class= "center col-sm-12">
      <h1 class="text-bold"> Let's Eat Some Burgers!</h1>
       </div>
    </div>
<div class= "col-sm-6">
  <div class= "row">
    <h2> Please make your order:</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="bu">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>
        <button type="submit">Add Burger</button>
      </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="jumbotron">
  <div class= "column">
    <h2 class= "text-bold">Uneaten Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
  </div>
  <div class= "column">
    <h2> Devoured Burgers!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>